<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lego Collection</title>
    <link rel="stylesheet" href="/css/main.css" />
    <!-- Ensure Tailwind CSS is included in your main.css -->
</head>

<body>
    <% include('partials/navbar', { page: '/lego/sets' }) %>

        <div class="container mx-auto mt-8">
            <div class="text-center hero">
                <h1 class="mb-12 text-4xl font-bold">Collection</h1>
                <p class="mt-4">
                    Browse the entire collection. Click the theme to filter by
                </p>
                <div class="flex justify-center gap-4 mt-12">
                    <!-- You will need to dynamically generate these links based on your available themes -->
                    <a href="/lego/sets?theme=Technic" class="px-4 py-2 text-white bg-blue-500 rounded mt-10">Technic</a
          >
          <a
            href="/lego/sets?theme=Classic"
            class="px-4 py-2 text-white bg-blue-500 rounded mt-10"
            >Classic Town</a
          >
          <a
            href="/lego/sets?theme=Supplemental"
            class="px-4 py-2 text-white bg-blue-500 rounded mt-10"
            >Supplemental</a
          >
        </div>
      </div>

      <!-- Sets Table -->
      <div class="overflow-x-auto">
        <table class="w-full table-auto mt-9">
          <tbody>
            <% sets.forEach(function(set) { %>
            <tr class="bg-gray-100 border-b">
              <td class="px-4 py-2">
                <img
                  src="<%= set.img_url %>"
                  alt="<%= set.name %>"
                  class="object-cover w-20 h-20"
                />
              </td>
              <td class="px-4 py-2"><%= set.name %></td>
              <td class="px-4 py-2">
                <a
                  href="/lego/sets?theme=<%= set.theme %>"
                  class="text-blue-500 hover:text-blue-700"
                  ><%= set.theme %></a
                >
              </td>
              <td class="px-4 py-2">
                <span class="font-bold">Year:</span><%= set.year %>
              </td>
              <td class="px-4 py-2">
                <span class="font-bold">Part:</span><%= set.num_parts %>
              </td>
              <td class="px-4 py-2">
                <a
                  href="/lego/sets/<%= set.set_num %>"
                  class="px-4 py-2 text-white bg-blue-500 rounded hover:bg-blue-700"
                  >Details</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% if (theme) { %>
      <a
        href="/lego/sets"
        class="px-4 py-2 text-white bg-blue-500 rounded hover:bg-blue-700 flex items-center justify-center w-[10%] m-10"
        id="btn"
        >Back</a
      >
      <% } %>
    </div>
  </body>
</html>