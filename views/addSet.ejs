<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lego Collection - Add Set</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>

  <body>
    <%- include('partials/navbar', { page: '/lego/addSet' }) %>
    <div class="container p-4 mx-auto">
      <div class="p-6 rounded-lg hero bg-base-200">
        <div class="text-center hero-content">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Add Set</h1>
            <p class="py-6">
              Use the below form to add a new Lego Set to the collection
            </p>
          </div>
        </div>
      </div>

      <br />

      <form action="/lego/addSet" method="post">
        <div
          class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 gap-y-0"
        >
          <!-- Name Field -->
          <div class="mb-6">
            <label for="name" class="block font-medium text-gray-700"
              >Name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:border-blue-300"
            />
          </div>

          <!-- Year Field -->
          <div class="mb-6">
            <label for="year" class="block font-medium text-gray-700"
              >Year</label
            >
            <input
              type="number"
              id="year"
              name="year"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:border-blue-300"
            />
          </div>

          <!-- Number of Parts Field -->
          <div class="mb-6">
            <label for="num_parts" class="block font-medium text-gray-700"
              >Number of Parts</label
            >
            <input
              type="number"
              id="num_parts"
              name="num_parts"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:border-blue-300"
            />
          </div>

          <!-- Image URL Field -->
          <div class="mb-6">
            <label for="img_url" class="block font-medium text-gray-700"
              >Image URL</label
            >
            <input
              type="url"
              id="img_url"
              name="img_url"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:border-blue-300"
            />
          </div>

          <!-- Theme ID Select Field -->
          <div class="mb-6">
            <label for="theme_id" class="block font-medium text-gray-700"
              >Theme</label
            >
            <select
              id="theme_id"
              name="theme_id"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:border-blue-300"
            >
              <% themes.forEach(theme => { %>
              <option value="<%= theme.id %>"><%= theme.name %></option>
              <% }); %>
            </select>
          </div>

          <!-- Set Number Field -->
          <div class="mb-6">
            <label for="set_num" class="block font-medium text-gray-700"
              >Set Number</label
            >
            <input
              type="text"
              id="set_num"
              name="set_num"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:border-blue-300"
            />
          </div>

          <!-- Submit Button -->
          <div class="col-span-3 mt-6">
            <button type="submit" class="w-full btn btn-primary">
              Add Set
            </button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
