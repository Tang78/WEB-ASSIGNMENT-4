<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lego Collection - Add Set</title>
    <link rel="stylesheet" href="/css/main.css" />
</head>

<body>
    <%- include('partials/navbar', { page: '/lego/editSet' }) %>

        <div class="container mx-auto mt-8">
            <h1 class="text-4xl font-bold text-center">Edit Set -
                <%= set.name %>
            </h1>

            <form action="/lego/editSet" method="POST" class="mt-8">
                <!-- Set Number (Read-only) -->
                <div class="mb-6">
                    <label for="set_num" class="block font-medium text-gray-700">Set Number</label>
                    <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" readonly class="w-full px-3 py-2 border border-gray-300 rounded-md cursor-not-allowed focus:border-blue-300">
                </div>

                <!-- Name -->
                <div class="mb-6">
                    <label for="name" class="block font-medium text-gray-700">Name</label>
                    <input type="text" id="name" name="name" value="<%= set.name %>" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:border-blue-300">
                </div>

                <!-- Year -->
                <div class="mb-6">
                    <label for="year" class="block font-medium text-gray-700">Year</label>
                    <input type="number" id="year" name="year" value="<%= set.year %>" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:border-blue-300">
                </div>

                <!-- Number of Parts -->
                <div class="mb-6">
                    <label for="num_parts" class="block font-medium text-gray-700">Number of Parts</label>
                    <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:border-blue-300">
                </div>

                <!-- Image URL -->
                <div class="mb-6">
                    <label for="img_url" class="block font-medium text-gray-700">Image URL</label>
                    <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:border-blue-300">
                </div>

                <!-- Theme -->
                <div class="mb-6">
                    <label for="theme_id" class="block font-medium text-gray-700">Theme</label>
                    <select id="theme_id" name="theme_id" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:border-blue-300">
          <% themes.forEach(theme => { %>
            <option <%= (set.theme_id === theme.id) ? "selected" : "" %> value="<%= theme.id %>"><%= theme.name %></option>
          <% }); %>
        </select>
                </div>

                <!-- Submit Button -->
                <div class="mt-6">
                    <button type="submit" class="btn btn-primary">Update Set</button>
                </div>
            </form>

            <div class="relative flex left-44 bottom-12"><a href="/lego/deleteSet/<%= set.set_num %>" class="text-white btn btn-error">Delete Set</a></div>


        </div>
</body>

</html>